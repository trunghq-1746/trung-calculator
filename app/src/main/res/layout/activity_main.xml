<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/linear_calculator"
                                             xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
                                             android:weightSum="5"
                                             tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linear_display"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/constraint_control"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="293dp"
        tools:layout_conversion_absoluteWidth="411dp">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScroll_display"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="4"
            android:fillViewport="false"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/linear_inDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|end"
                android:orientation="vertical"/>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_control"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="439dp"
        tools:layout_conversion_absoluteWidth="411dp">

