            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_mod"
            app:layout_constraintBottom_toTopOf="@+id/button_9"
            app:layout_constraintEnd_toStartOf="@+id/button_div"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_del"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="88dp"
            tools:layout_conversion_absoluteWidth="103dp"
            />

        <Button
            android:id="@+id/button_div"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_div"
            app:layout_constraintBottom_toTopOf="@+id/button_multi"
            app:layout_constraintEnd_toEndOf="parent"
